{
  "name": "node-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src",
    "build": "rm -rf ./build && tsc",
    "clean": "rm -f ./data/*",
    "start": "npm run build && node build/src/shared/infrastructure/index.js",
    "dev": "nodemon --exec ts-node ./src/apps/backend/index.ts",
    "test:unit": "jest --testMatch **/test/**/*unit.test.ts",
    "test:integration": "jest --testMatch **/test/**/*integration.test.ts",
    "test:e2e": "jest --testMatch **/test/**/*e2e.test.ts --runInBand",
    "test": "jest --runInBand"
  },
  "keywords": [
    "node",
    "template",
    "boilerplate",
    "typescript",
    "eslint"
  ],
  "author": "Samuel Casanova",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.13",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "glob": "^11.0.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0"
  }
